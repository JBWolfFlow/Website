# Security Headers for Netlify/Vercel
# These headers protect against common web vulnerabilities

/*
  # Content Security Policy - Prevents XSS attacks
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.neuroforgetechnologies.net; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  
  # Strict Transport Security - Forces HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # X-Frame-Options - Prevents clickjacking
  X-Frame-Options: DENY
  
  # X-Content-Type-Options - Prevents MIME sniffing
  X-Content-Type-Options: nosniff
  
  # X-XSS-Protection - Enables XSS filter
  X-XSS-Protection: 1; mode=block
  
  # Referrer Policy - Controls referrer information
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions Policy - Controls browser features
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()
  
  # Cross-Origin Policies
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin
  
  # Cache Control for security
  Cache-Control: public, max-age=31536000, immutable

# API endpoints - more permissive for functionality
/api/*
  Access-Control-Allow-Origin: https://neuroforgetechnologies.net
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization
  Access-Control-Max-Age: 86400

# Static assets - aggressive caching
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  
/*.js
  Cache-Control: public, max-age=31536000, immutable
  
/*.css
  Cache-Control: public, max-age=31536000, immutable
  
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  
/*.woff
  Cache-Control: public, max-age=31536000, immutable

# HTML files - shorter cache
/*.html
  Cache-Control: public, max-age=3600, must-revalidate